{
  "name": "paradise-law-az",
  "version": "0.1.0",
  "description": "Family law virtual consultation website for Paradise Law AZ",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "check-content": "node scripts/check-content-length.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0 --fix"
    ],
    "**/*.{css,md,mdx,json}": [
      "prettier --check"
    ]
  }
}
